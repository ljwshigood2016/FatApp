<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical" >

    <include layout="@layout/item_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.publicnumber.msafe.view.LinearGridView
            android:id="@+id/gv_function"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item_icon_nomal"
            android:horizontalSpacing="0dp"
            android:listSelector="@android:color/transparent"
            android:numColumns="3"
            android:padding="0dp"
            android:scrollbars="@null"
            android:verticalSpacing="0dp" >
        </com.publicnumber.msafe.view.LinearGridView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#969696" >
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/ll_column_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="75"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/rl_antilost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ic_antilost_large_selector"
                android:visibility="gone" >
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_capture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ic_capture_large_selector" >
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_column_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="75"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/rl_flash"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/ic_light_large_selector" >
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_open_app"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="2"
                android:background="@drawable/ic_open_app_large_selector" >
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_column_three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="50"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/rl_sos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ic_sos_large_selector"
                    android:orientation="vertical" >
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_anti_call"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_anti_call_selector"
                    android:orientation="vertical" >
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_call"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/ic_call_large_selector"
                android:orientation="vertical" >
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>